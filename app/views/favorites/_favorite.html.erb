<% if user_signed_in? %>
  <% if restaurant.favorited_by?(current_user) %>
    <%= link_to restaurant_favorite_path(restaurant.id), method: :delete do %>
      <i class="fas fa-heart heart-icon"></i>
      <%= restaurant.favorites.count %>件
    <% end %>
  <% else %>
    <%= link_to restaurant_favorite_path(restaurant.id), method: :post do %>
      <i class="far fa-heart"></i>
      <!-- 空 -->
      <%= restaurant.favorites.count %>件
    <% end %>
  <% end %>
<% end %>