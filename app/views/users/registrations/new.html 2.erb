<div class="user-registrations">
  <div class="user-registrations__form">
    <h2>Let's EATING</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "お名前" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>

      <div class="field">
        <%= f.phone_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "電話番号(スマホ・携帯電話)" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード(6文字以上)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワードをもう一度入力" %>
      </div>

      <div class="actions">
        <%= f.submit "登録"%>
      </div>
    <% end %>

      <p>登録済の方は<%= link_to "こちら", new_user_session_path %></p>
  </div>
</div>
